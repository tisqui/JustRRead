<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:paddingLeft="@dimen/drawer_item_margin_left"
              android:gravity="bottom"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Hello, USERNAME!"
        android:textColor="@color/drawerTextColor"
        android:textSize="@dimen/drawer_title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/drawer_item_margin_top"
        android:paddingLeft="@dimen/drawer_item_margin_left"
        android:paddingRight="@dimen/drawer_item_margin_left"
        android:gravity="end">

        <Button
            android:id="@+id/drawer_btn_settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:background="@drawable/button_drawer_selector"
            android:textColor="@drawable/button_drawer_text_color_selector"
            />

        <Button
            android:id="@+id/drawer_btn_login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/button_drawer_selector"
            android:textColor="@drawable/button_drawer_text_color_selector"
            />
    </LinearLayout>


</LinearLayout>