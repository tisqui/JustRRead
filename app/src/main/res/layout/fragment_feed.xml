<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.squirrel.justrread.fragments.FeedFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feed_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/application_toolbar"
        android:drawSelectorOnTop="true"
        android:scrollbars="vertical"
        />
    <!-- empty list -->
    <TextView
        android:id="@+id/posts_list_emply_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_anchor="@+id/feed_recycler_view"
        app:layout_anchorGravity="fill"
        android:text="@string/empty_posts_list" />
</FrameLayout>
